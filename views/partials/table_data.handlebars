
{{#each items}}
<tr>
    <!--<th class="text-center">{{this.rowid}}</th>-->
    <td class="text-center">{{this.id}}</td>
    <td class="text-center" >{{this.name}}</td>
    <td class="text-center">{{this.category}}</td>
    <td class="text-center">{{this.description}}</td>
    <td class="text-center">
        <button type="button" class="btn btn-info" data-toggle="modal" data-target="#{{this.name}}"  data-id={{this.id}}>Szerkesztés</button>
        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#gjvhgvh{{this.id}}" data-id={{this.id}}>Törlés</button>
    </td>
    </tr>
{{/each}}


{{#each items}}
<div class="modal" tabindex="-1" role="dialog" id={{this.name}}>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Szerkesztés</h5><br>
        
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Forbidden characters: Whitespace ! " # % & ' ( ) * + , . / ; < = > @ [ \ ] ^ ` { | } ~</p>
<form method="POST" action="/changes">
<label>Megnevezés</label>
<input type="hidden" name="rowid" value={{this.id}}>
<input type="hidden" name="old_category" value={{this.category}}>
<input type="text" name="newname" value={{this.name}}><br>
<label>Description</label>
<input type="hidden" name="old_description" value={{this.description}}>
<input type="text" name="new_description" value={{this.description}}><br>

<label>Category</label>
<!--<input type="text" name="newcategory" value= {{this.category}}>-->
{{> category_selecting }}
</div>
      
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save changes</button>
        </form>
      </div>
    </div>
  </div>
</div>
{{/each}}

{{#each items}}
<div class="modal" tabindex="-1" role="dialog" id="gjvhgvh{{this.id}}">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Törlés</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
       <p>Törölve legyen az elem?</p>
       <form method="POST" action="/deleted">
       <input type="hidden" name="rowid" value={{this.id}}>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Végleges törlés</button>
        </form>
      </div>
    </div>
  </div>
</div>
{{/each}}
